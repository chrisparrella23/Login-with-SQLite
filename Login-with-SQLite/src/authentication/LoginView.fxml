<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="authentication.LoginController">
   <children>
      <AnchorPane prefHeight="200.0" prefWidth="278.0">
         <children>
            <TextField fx:id="username" layoutX="65.0" layoutY="88.0" promptText="User Name" />
            <PasswordField fx:id="password" layoutX="65.0" layoutY="127.0" promptText="Password" />
            <Button layoutX="65.0" layoutY="161.0" mnemonicParsing="false" onAction="#userLogin" text="Sign In" />
            <Label layoutX="99.0" layoutY="30.0" text="Welcome!">
               <font>
                  <Font size="18.0" />
               </font>
            </Label>
            <Button layoutX="153.0" layoutY="161.0" mnemonicParsing="false" onAction="#goToUserCreation" text="Sign Up" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
